<%= form_for(@post) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, placeholder: "Title"  %>

  <%= f.label :summary %>
  <%= f.text_field :summary, placeholder: "Summary"  %>

  <%= f.label :body %>
  <%= f.text_area :body , placeholder: "Write the Body of Your Post Here", class: "formbody" %>
  </span>
  <%= f.label :upload_url, "Upload URL" %>
  <%= f.text_field :upload_url, placeholder: "Upload a File" %>

  <%= f.submit "Post Me!" %>
<% end %>
