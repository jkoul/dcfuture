<%= form_for([@post]) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, placeholder: "Title"  %>

  <%= f.label :summary %>
  <%= f.text_field :summary, placeholder: "Summary"  %>

  <%= f.label :body %>
  <%= f.cktext_area :body, placeholder: "Write the Body of Your Post Here", class: "formbody" %>

  <%= f.label :upload_url, "Upload URL" %>
  <%= f.text_field :upload_url, placeholder: "Upload a File" %>


  <%= f.label :section, "Choose a Section:" %>
  <%= f.select :section, [['Issues','issues'],['Elections','elections'],['Government','government'],['DC', 'dc']], include_blank: true %>

  <div class="field">
    <%= f.label :post_tag_list, "Tags (separated by commas)" %><br />
    <%= f.text_field :post_tag_list, value: @post.post_tag_list.to_s %>
  </div>

  <%= f.submit "Post Me!" %>
<% end %>
