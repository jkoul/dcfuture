<h2 class="title-header"><%= @post.title %> </h2>

<div class="post">
  <div class="post-header">
    <span class="post-user">Posted by&nbsp;</span><%= link_to "#{@user.username}", @user %></span>
    <span>on <%= @post.timestamp %></span>
  </div>
  <div class="edit">
    <%= link_to "Edit", edit_post_path %></div>

  <div class="content">
    <span id="summary"><%= @post.summary %></span>
    <span class="body"><%= @post.body %></span>
  </div>

  <div class="section">Filed Under: <%= @post.section %></div>
</div>

  <h3>Comments
  <%= link_to "(Add New Comment)", new_post_comment_path(@post) %></h3>

  <ul>
    <% @post.comments.each do |comment| %>
      <li>
        <div><%= link_to "#{comment.title}", post_comment_path(@post, comment) %></div>
        <div><%= comment.body %></div>
      </li>
    <% end %>
